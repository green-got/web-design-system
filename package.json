{
  "name": "@green-got/web-design-system",
  "version": "0.0.6",
  "description": "Green-Got design system",
  "homepage": "https://green-got.github.io/web-design-system/",
  "repository": "https://github.com/green-got/web-design-system",
  "author": "fabien-h <fabien.huet@gmail.com>",
  "private": false,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build-docs": "node utils/build-docs.mjs",
    "build": "ladle build",
    "commit": "git-cz",
    "dev": "ladle serve",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm run lint && pnpm run typecheck && pnpm test",
    "prepare": "husky install",
    "preview-build": "ladle preview",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@ladle/react": "^2.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.0.0",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.5.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "sass": "^1.66.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "biome format --write .",
      "biome lint ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

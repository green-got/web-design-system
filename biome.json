{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "ignore": ["docs/", "*.yml", "*.yaml", "*.scss"],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "formatWithErrors": true,
    "ignore": ["docs/", "*.yml", "*.yaml", "*.scss"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
